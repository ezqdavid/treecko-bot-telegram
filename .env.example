# Treecko Finance Bot - Environment Variables
# Copy this file to .env and fill in your values

# Required: Telegram Bot Token from @BotFather
# Format: <bot_id>:<hash> (e.g., 123456789:ABCdefGHIjklMNOpqrSTUvwxYZ_0123456)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook configuration (for Cloud Run deployment)
# If set, the bot runs in webhook mode. If empty, it uses polling mode.
# Example: https://my-bot-abc123-uc.a.run.app
# Note: Must not end with a trailing slash
WEBHOOK_BASE_URL=

# Port for the HTTP server (Cloud Run sets this automatically)
# Valid range: 1-65535
PORT=8080

# Port for the health check HTTP endpoint (default: 8081)
# The /health endpoint returns JSON with status information
# Valid range: 1-65535
HEALTH_CHECK_PORT=8081

# Logging configuration
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# LOG_FORMAT: text (default), json (for structured logging)
LOG_FORMAT=text

# Optional: Google Sheets integration
# Path to your Google service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=credentials.json

# Google Sheets document ID (from the URL)
# e.g., https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Optional: Database path
# Valid extensions: .db, .sqlite, .sqlite3
DATABASE_PATH=transactions.db
